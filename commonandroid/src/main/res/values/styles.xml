<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Colors -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorError">@color/red_700</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- Edit text -->
        <item name="textInputStyle">@style/AppTextInput</item>

        <!-- Other -->
        <item name="fontFamily">@font/champagne_limousines</item>
    </style>

    <!-- TextInputLayout -->
    <style name="AppTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

</resources>
