<resources>

    <!-- Base Theme containing API-aware items -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" >

        <!-- System -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="BaseTheme">

        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Components -->
        <item name="shapeAppearanceLargeComponent">@style/AppLargeComponent</item>
        <item name="textInputStyle">@style/AppTextInput</item>
        <item name="tabStyle">@style/AppTabLayout</item>

        <!-- Text -->
        <item name="fontFamily">@font/champagne_limousines</item>
        <item name="android:textColorPrimary">@drawable/c_text_primary</item>
        <item name="android:textColorSecondary">@drawable/c_text_secondary</item>
        <item name="android:textColorTertiary">@drawable/c_text_tertiary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>

    </style>

    <!-- ShapeAppearance Large -->
    <style name="AppLargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/largeComponent_cornerRadius</item>
    </style>

    <!-- TextInputLayout -->
    <style name="AppTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="helperTextTextColor">@color/colorTextPrimary</item> <!--Text below the box-->
    </style>

    <!-- TabLayout -->
    <style name="AppTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">?textAppearanceSubtitle1</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">?colorPrimary</item>
    </style>

</resources>
