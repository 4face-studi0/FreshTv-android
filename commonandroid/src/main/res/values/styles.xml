<resources>

    <!-- Base Theme containing API-aware items -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">

        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorError">@color/red_700</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- System -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Components -->
        <item name="textInputStyle">@style/AppTextInput</item>
        <item name="tabStyle">@style/AppTabLayout</item>

        <!-- Other -->
        <item name="fontFamily">@font/champagne_limousines</item>
    </style>

    <!-- TextInputLayout -->
    <style name="AppTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <!-- TabLayout -->
    <style name="AppTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">?attr/colorPrimary</item>
    </style>

</resources>
