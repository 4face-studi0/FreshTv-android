<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <studio.forface.freshtv.preferences.entries.CleanChannelsView
            android:id="@+id/preferencesCleanChannelsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <studio.forface.freshtv.preferences.entries.CleanGuidesView
            android:id="@+id/preferencesCleanGuidesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>