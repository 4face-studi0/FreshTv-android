<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?attr/selectableItemBackground">

    <!-- Image -->
    <ImageView
        android:id="@+id/movieChannelImage"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:contentDescription="@string/image_channel_logo"
        tools:src="@drawable/ic_tv"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <!-- Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movieChannelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Channel 5"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

            <TextView
                android:id="@+id/movieChannelDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Channel 5"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        </LinearLayout>

        <!-- Favorite -->
        <ImageView
            android:id="@+id/movieChannelFavorite"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:layout_gravity="end|top"
            android:contentDescription="@string/image_channel_favorite"
            tools:src="@drawable/ic_favorite"/>

    </FrameLayout>

</LinearLayout>